<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">
	

<web-app>


<servlet>
        <servlet-name>xview</servlet-name>
        <servlet-class>com.dallaway.xml.RenderServlet</servlet-class>
        <init-param>
            <param-name>xml-folder</param-name>
            <param-value>/home/richard/html/brightonbloggers.com/www</param-value>
        </init-param>
        <init-param>
            <param-name>xsl-folder</param-name>
            <param-value>/home/richard/html/brightonbloggers.com/www</param-value>
        </init-param>
        <init-param>
            <param-name>comment-folder</param-name>
            <param-value>/home/richard/html/brightonbloggers.com/www/comment</param-value>
        </init-param>
    </servlet>



  <servlet-mapping>
	<servlet-name>xview</servlet-name>
	<url-pattern>*.xml</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>index.html</welcome-file>
  	<welcome-file>index.xml</welcome-file>
  	<welcome-file>index.php</welcome-file>
  </welcome-file-list>



</web-app>




